<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="416.0" styleClass="dialog-pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.control_panel.controllers.WebLinkDialogController">
   <center>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="%insert_url_below">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Label>
            <HBox>
               <children>
                  <TextField fx:id="urlTextField" alignment="CENTER" promptText="%insert_url_here" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <children>
                  <ImageView fx:id="imageView" fitHeight="48" fitWidth="48">
                     <HBox.margin>
                        <Insets right="8.0" />
                     </HBox.margin>
                  </ImageView>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="%title">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="titleTextField" promptText="%title_msg" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <ProgressBar fx:id="progressBar" maxWidth="1.7976931348623157E308" progress="0.0">
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </ProgressBar>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox BorderPane.alignment="TOP_RIGHT">
         <children>
            <Button fx:id="refreshBtn" mnemonicParsing="false" prefWidth="25.0"  styleClass="confirmation-button">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20">
                     <Image url="/assets/refresh.png" />
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Refresh"/>
               </tooltip>
            </Button>
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="cancelBtn" mnemonicParsing="false" styleClass="confirmation-button">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20">
                     <Image url="/assets/clear.png" />
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="selectBtn" mnemonicParsing="false" styleClass="confirmation-button">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20">
                     <Image url="/assets/done.png" />
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
